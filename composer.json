{
    "name": "cortex/foundation",
    "type": "cortex-module",
    "description": "The core foundation of Rinvex Cortex modular application architecture.",
    "keywords": [
        "rinvex",
        "cortex",
        "module",
        "laravel",
        "foundation",
        "architecture",
        "modular",
        "kernel",
        "heart",
        "core"
    ],
    "license": "MIT",
    "homepage": "https://rinvex.com",
    "support": {
        "email": "help@rinvex.com",
        "issues": "https://github.com/rinvex/cortex-foundation/issues",
        "source": "https://github.com/rinvex/cortex-foundation",
        "docs": "https://github.com/rinvex/cortex-foundation/README.md"
    },
    "authors": [
        {
            "name": "Rinvex LLC",
            "homepage": "https://rinvex.com",
            "email": "help@rinvex.com"
        },
        {
            "name": "Abdelrahman Omran",
            "homepage": "https://omranic.com",
            "email": "me@omranic.com",
            "role": "Project Lead"
        },
        {
            "name": "The Generous Laravel Community",
            "homepage": "https://github.com/rinvex/cortex-foundation/contributors"
        }
    ],
    "require": {
        "php": "^7.0.0",
        "barryvdh/laravel-snappy": "^0.4.0",
        "davejamesmiller/laravel-breadcrumbs": "^4.0.0",
        "edvinaskrucas/notification": "^5.2.0",
        "fideloper/proxy": "^3.3.0",
        "laravel/framework": "~5.5.0",
        "laravelcollective/html": "~5.5.0",
        "league/fractal": "^0.16.0",
        "lord/laroute": "^2.4.0",
        "mcamara/laravel-localization": "^1.3.0",
        "proengsoft/laravel-jsvalidation": "^2.1.0",
        "rinvex/cacheable": "dev-develop",
        "rinvex/composer": "dev-develop",
        "rinvex/fort": "dev-develop",
        "rinvex/pages": "dev-develop",
        "rinvex/support": "dev-develop",
        "spatie/laravel-activitylog": "^2.0.0",
        "spatie/laravel-menu": "^3.0.0",
        "spatie/menu": "^2.2.0",
        "symfony/console": "^3.0.0",
        "symfony/finder": "^3.0.0",
        "symfony/http-kernel": "^3.0.0",
        "watson/validating": "3.0.*",
        "yajra/laravel-datatables-fractal": "^1.0.0",
        "yajra/laravel-datatables-buttons": "^3.0.0",
        "yajra/laravel-datatables-html": "^3.0.0",
        "yajra/laravel-datatables-oracle": "^8.0.0"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "Cortex\\Foundation\\": "src/"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        },
        "laravel": {
            "providers": [
                "Cortex\\Foundation\\Providers\\FoundationServiceProvider",
                "Cortex\\Foundation\\Providers\\ConsoleSupportServiceProvider",
                "Cortex\\Foundation\\Overrides\\Lord\\Laroute\\LarouteServiceProvider"
            ],
            "aliases": {
                "Menu": "Spatie\\Menu\\Laravel\\Facades\\Menu"
            }
        },
        "cortex-module": {
            "autoinstall": false,
            "icon": {
                "color": "#2196f3",
                "name": "heartbeat",
                "background-size": "cover",
                "background-color": "#e3f2fd",
                "background-position": "center",
                "background-repeat": "no-repeat"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
